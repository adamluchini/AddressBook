<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Address Book</title>
  </head>
  <body>
    <h1>Add your friends to your address book.</h1>
    @if (@Model.Count == 0)
    {
      <h2>You don't have any friends yet :( </h2>
    }
    <p><a href ="/contact/new">Add a friend's infomation</a></p>
    <form action="/contacts_deleted" method="post">
      <button type="submit">Delete Contacts</button>
    </form>
    @foreach (var Contact in Model)
      {
    <ul>
        <h4>@Contact.GetFirstName()</h4>
          <li>
            @Contact.GetFirstName() @Contact.GetLastName()
          </li>
          <li>
            @Contact.GetPhoneNumber()
          </li>
          <li>
            @Contact.GetAddress()
          </li>
    </ul>
    }

  </body>
</html>
